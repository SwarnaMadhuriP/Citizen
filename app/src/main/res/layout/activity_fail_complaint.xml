        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mobileno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="265dp"
        android:text="MobileNo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/convictname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="212dp"
        android:text="Convict Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/convictname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="203dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mobileno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="258dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/victimname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="197dp"
        android:layout_y="144dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/place2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="229dp"
        android:layout_y="383dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="197dp"
        android:layout_y="445dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="509dp"
        android:width="150dp"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="618dp"
        android:width="150dp"
        android:text="Next" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="105dp"
        android:dropDownWidth="150dp"
        android:spinnerMode="dropdown" />


</AbsoluteLayout>