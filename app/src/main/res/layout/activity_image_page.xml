<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagePage"
    android:background="@drawable/pinterest">


    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_x="90dp"
        android:layout_y="99dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_black_24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="45dp"
        android:text="Upload Image"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/file22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="570dp"
        android:width="150dp"
        android:text="File the Complaint"
        android:textStyle="bold" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="87dp"
        android:layout_y="330dp"
        android:text="Upload Image" />
</AbsoluteLayout>